{
	"engines": {
		"node": ">=20.10.0",
		"npm": ">=10.2.3"
	},
	"volta": {
		"node": "20.11.1"
	},
	"devDependencies": {
		"@inc2734/unitone-css": "^0.61.6",
		"@wordpress/env": "^10.11.0",
		"@wordpress/icons": "^10.11.0",
		"@wordpress/interface": "^8.0.0",
		"@wordpress/scripts": "^30.4.0",
		"@wordpress/style-engine": "^2.13.0",
		"autoprefixer": "^10.4.20",
		"clsx": "^2.1.1",
		"cpy-cli": "^5.0.0",
		"cross-env": "^7.0.3",
		"cssnano": "^7.0.6",
		"eslint-import-resolver-exports": "^1.0.0-beta.5",
		"feather-icons": "^4.29.2",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.48",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.0",
		"prettier": "npm:wp-prettier@3.0.3",
		"rimraf": "^6.0.1",
		"sass": "^1.80.6",
		"swiper": "^11"
	},
	"scripts": {
		"export:wp-content:plugins": "npm run cli cp -- -r ../../plugins .export/wp-content",
		"export:wp-content:uploads": "npm run cli cp -- -r ../../uploads .export/wp-content",
		"export:wp-content": "npm run cli rm -- -rf .export/wp-content && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
		"export:db": "mkdir -p .export/sql && npm run wp db -- export .export/sql/local.sql",
		"export": "run-p export:*",
		"import:wp-content:plugins": "npm run cli cp -- -r .export/wp-content/plugins ../../",
		"import:wp-content:uploads": "npm run cli cp -- -r .export/wp-content/uploads ../../",
		"import:wp-content": "run-p import:wp-content:*",
		"import:db": "npm run wp db -- import .export/sql/local.sql",
		"import": "run-p import:*",
		"wp-env": "wp-env",
		"start": "wp-env start && open http://localhost:8888",
		"stop": "npm run export && wp-env stop",
		"cli": "wp-env run --env-cwd=wp-content/themes/unitone cli",
		"wp": "wp-env run --env-cwd=wp-content/themes/unitone cli wp",
		"composer": "wp-env run --env-cwd=\"wp-content/themes/unitone\" cli composer",
		"format:blocks": "wp-scripts format src/blocks",
		"format:formats": "wp-scripts format src/formats",
		"format:variations": "wp-scripts format src/variations",
		"format:js": "wp-scripts format src/js",
		"format:settings": "wp-scripts format App/Controller/Manager/src/js",
		"css:wp-blocks": "rimraf dist/css/wp-blocks && sass --no-source-map src/css/wp-blocks:dist/css/wp-blocks && postcss dist/css/wp-blocks -r",
		"css:wp-oembed-blog-card": "rimraf dist/css/wp-oembed-blog-card && sass --no-source-map src/css/wp-oembed-blog-card:dist/css/wp-oembed-blog-card && postcss dist/css/wp-oembed-blog-card -r",
		"css:app": "sass --no-source-map src/css/app/app.scss:dist/css/app/app.css && postcss dist/css/app/app.css -r",
		"css:editor-styles": "sass --no-source-map src/css/app/editor-style.scss:dist/css/app/editor-style.css && postcss dist/css/app/editor-style.css -r",
		"css:editor": "sass --no-source-map src/css/editor/editor.scss:dist/css/editor/editor.css && postcss dist/css/editor/editor.css -r",
		"css": "run-p css:*",
		"dev:js:editor": "rimraf dist/js/app && cross-env NODE_ENV=development wp-scripts build src/js/editor/editor.js --output-path=dist/js/editor --webpack-src-dir=dist/js/editor",
		"blocks:build": "rimraf dist/blocks && wp-scripts build --output-path=dist --experimental-modules",
		"blocks:php": "cpy \"src/blocks/**/*.php\" \"dist/blocks\"",
		"blocks": "run-s format:blocks blocks:build blocks:php",
		"js:app": "rimraf dist/js/app && wp-scripts build src/js/app/app.js --output-path=dist/js/app --webpack-src-dir=dist/js/app",
		"js:editor": "rimraf dist/js/editor && wp-scripts build src/js/editor/editor.js --output-path=dist/js/editor --webpack-src-dir=dist/js/editor",
		"js": "run-s format:js && run-p js:*",
		"formats:build": "rimraf dist/formats && wp-scripts build src/formats/formats.js --output-path=dist/formats --webpack-src-dir=dist/formats",
		"formats:css": "sass --no-source-map src/formats/formats.scss:dist/formats/formats.css && postcss dist/formats/formats.css -r",
		"formats": "run-s format:formats && run-p formats:build formats:css",
		"variations:build": "rimraf dist/variations && wp-scripts build src/variations/variations.js --output-path=dist/variations --webpack-src-dir=dist/variations",
		"variations": "run-s format:variations && run-p variations:build",
		"settings:build": "rimraf App/Controller/Manager/dist/js/app && wp-scripts build App/Controller/Manager/src/js/app.js --output-path=App/Controller/Manager/dist/js --webpack-src-dir=App/Controller/Manager/dist/js",
		"settings:css": "sass --no-source-map App/Controller/Manager/src/css/app.scss:App/Controller/Manager/dist/css/app.css && postcss App/Controller/Manager/dist/css/app.css -r",
		"settings:img": "rimraf App/Controller/Manager/dist/img && cpy \"App/Controller/Manager/src/img/*\" \"App/Controller/Manager/dist/img\"",
		"settings": "run-s format:settings && run-p settings:*",
		"img": "rimraf dist/img && cpy \"src/img/*\" \"dist/img\"",
		"fonts": "rimraf dist/fonts && cpy \"src/fonts/*\" \"dist/fonts\"",
		"build": "run-p css blocks js formats variations settings img fonts",
		"test:lint:blocks": "wp-scripts lint-js src/blocks",
		"test:lint:formats": "wp-scripts lint-js src/formats",
		"test:lint:settings": "wp-scripts lint-js App/Controller/Manager/src/js",
		"test:lint:js": "wp-scripts lint-js src/js",
		"test:lint:php": "wp-env start && npm run composer lint",
		"test:lint": "run-s test:lint:*",
		"test": "run-s test:*",
		"zip:pack": "rimraf unitone unitone.zip && rsync -a --exclude='.*' --exclude='*.log' --exclude='wp-cli.yml' --exclude='error_log' --exclude='todo.md' --exclude='*.config.js' --exclude='/bin' --exclude='/node_modules' --exclude='/vendor' --exclude='/tests' --exclude='/src' --exclude='/unitone.zip' ./ unitone",
		"zip:archive": "zip -9 -qmr unitone.zip unitone",
		"zip": "npm run zip:pack && wp-env start && npm run composer install -- --no-dev -d unitone && npm run zip:archive",
		"make-pot": "wp-env start && npm run wp i18n -- make-pot . ./languages/unitone.pot -- --exclude=.*,src --debug",
		"make-json": "rimraf languages/*.json && wp-env start && npm run wp i18n -- make-json ./languages/ja.po -- --no-purge",
		"make-php": "npm run cli php -- ./bin/l10n.php"
	},
	"dependencies": {
		"remove-accents": "^0.5.0",
		"save-dev": "0.0.1-security"
	}
}
