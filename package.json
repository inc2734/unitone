{
	"engines": {
		"node": ">=14.0.0 <15",
		"npm": ">=6.9.0 <7"
	},
	"devDependencies": {
		"@inc2734/unitone-css": "^0.42.0",
		"@wordpress/env": "^5.16.0",
		"@wordpress/icons": "^9.22.0",
		"@wordpress/scripts": "^26.2.0",
		"autoprefixer": "^10.4.14",
		"classnames": "^2.3.2",
		"cpy-cli": "^4.2.0",
		"cssnano": "^6.0.0",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.23",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.1.0",
		"prettier": "npm:wp-prettier@2.8.5",
		"rimraf": "^5.0.0",
		"sass": "^1.62.0",
		"swiper": "^9.2.3"
	},
	"scripts": {
		"export:wp-content:plugins": "npm run cli 'cp -r wp-content/plugins .export/wp-content'",
		"export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
		"export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
		"export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
		"export": "run-p export:*",
		"import:wp-content:plugins": "npm run cli 'cp -r .export/wp-content/plugins wp-content'",
		"import:wp-content:uploads": "npm run cli 'cp -r .export/wp-content/uploads wp-content'",
		"import:wp-content": "run-p import:wp-content:*",
		"import:db": "npm run wp 'db import .export/sql/local.sql'",
		"import": "run-p import:*",
		"wp-env": "wp-env",
		"start": "wp-env start && open http://localhost:8888",
		"stop": "npm run export && wp-env stop",
		"cli": "wp-env run cli",
		"wp": "wp-env run cli wp",
		"composer": "wp-env run composer",
		"css:app": "sass --no-source-map src/css/app/app.scss:dist/css/app/app.css && postcss dist/css/app/app.css -r",
		"css:editor-styles": "sass --no-source-map src/css/app/editor-style.scss:dist/css/app/editor-style.css && postcss dist/css/app/editor-style.css -r",
		"css:editor": "sass --no-source-map src/css/editor/editor.scss:dist/css/editor/editor.css && postcss dist/css/editor/editor.css -r",
		"css:snow-monkey-editor:app": "sass --no-source-map src/css/snow-monkey-editor/app.scss:dist/css/snow-monkey-editor/app.css && postcss dist/css/snow-monkey-editor/app.css -r",
		"css:snow-monkey-editor:editor": "sass --no-source-map src/css/snow-monkey-editor/editor.scss:dist/css/snow-monkey-editor/editor.css && postcss dist/css/snow-monkey-editor/editor.css -r",
		"css:snow-monkey-editor": "run-p css:snow-monkey-editor:*",
		"css": "run-p css:*",
		"blocks:format": "wp-scripts format src/blocks",
		"blocks:build": "rimraf dist/blocks && wp-scripts build --output-path=dist",
		"blocks:php": "cpy \"src/blocks/**/*.php\" \"dist/blocks\"",
		"blocks": "run-s blocks:format blocks:build blocks:php",
		"js:format": "wp-scripts format src/js",
		"js:app": "wp-scripts build src/js/app/app.js --output-path=dist/js/app && rimraf dist/js/app/blocks",
		"js:editor": "wp-scripts build src/js/editor/editor.js --output-path=dist/js/editor && rimraf dist/js/editor/blocks",
		"js": "run-s js:format && run-p js:editor js:app",
		"img": "rimraf dist/img && cpy \".\" \"../../dist/img\" --cwd=src/img --parents",
		"build": "run-p css blocks js img",
		"test:lint:blocks": "wp-scripts lint-js src/blocks",
		"test:lint:js": "wp-scripts lint-js src/js",
		"test:lint:php": "wp-env start && wp-env run composer run-script lint",
		"test:lint": "run-s test:lint:*",
		"test": "run-s test:*",
		"zip:pack": "rimraf unitone unitone.zip && rsync -a --exclude='.*' --exclude='*.log' --exclude='wp-cli.yml' --exclude='error_log' --exclude='todo.md' --exclude='*.config.js' --exclude='/bin' --exclude='/node_modules' --exclude='/vendor' --exclude='/tests' --exclude='/src' --exclude='/unitone.zip' ./ unitone",
		"zip:archive": "zip -9 -qmr unitone.zip unitone",
		"zip": "npm run zip:pack && wp-env start && wp-env run composer 'install --no-dev -d unitone' && npm run zip:archive",
		"make-pot": "npm run wp 'i18n make-pot wp-content/themes/unitone wp-content/themes/unitone/languages/unitone.pot --exclude=.*,src'",
		"make-json": "rimraf languages/*.json && npm run wp 'i18n make-json wp-content/themes/unitone/languages/unitone-ja.po --no-purge'"
	},
	"dependencies": {
		"remove-accents": "^0.4.4",
		"save-dev": "0.0.1-security"
	}
}
