{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"version": "12.0.11",
	"textdomain": "unitone",
	"name": "unitone/cover",
	"title": "Cover",
	"description": "This block allows you to specify how the child blocks are placed vertically within a certain height. It is designed primarily to cover a large area of the screen (by default, the minimum height is the same height as the screen).",
	"attributes": {
		"variation": {
			"type": "string",
			"default": ""
		}
	},
	"selectors": {
		"root": "[data-unitone-layout~=cover]"
	},
	"supports": {
		"className": false,
		"anchor": true,
		"align": [ "full", "wide" ],
		"color": {
			"background": true,
			"gradients": true,
			"color": true,
			"link": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"unitone": {
			"gap": true,
			"minHeight": true,
			"padding": true,
			"fluidTypography": true,
			"lineHeight": true
		}
	},
	"example": {
		"attributes": {
			"unitone": {
				"minHeight": "500px"
			}
		},
		"innerBlocks": [
			{
				"name": "unitone/cover-content",
				"attributes": {
					"position": "top"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Lorem ipsum dolor sit amet, consectetur adipisicing elit"
						}
					}
				]
			},
			{
				"name": "unitone/cover-content",
				"attributes": {
					"position": "bottom"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Ut enim ad minim veniam, quis nostrud exercitation ullamco"
						}
					}
				]
			}
		]
	},
	"category": "unitone/layout",
	"editorScript": "file:./index.js",
	"style": "file:./style-index.css"
}
