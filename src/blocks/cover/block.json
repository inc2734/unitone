{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"textdomain": "unitone",
	"name": "unitone/cover",
	"title": "Cover",
	"description": "This block is designed to cover a large area of the screen.",
	"attributes": {
		"noPadding": {
			"type": "boolean",
			"default": false
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ]
		}
	},
	"supports": {
		"className": false,
		"anchor": true,
		"color": {
			"background": false,
			"link": true,
			"text": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"unitone": {
			"gap": true,
			"minHeight": true,
			"fluidTypography": true,
			"lineHeight": true
		}
	},
	"example": {
		"attributes": {
			"unitone": {
				"minHeight": "500px"
			}
		},
		"innerBlocks": [
			{
				"name": "unitone/cover-content",
				"attributes": {
					"position": "top"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Lorem ipsum dolor sit amet, consectetur adipisicing elit"
						}
					}
				]
			},
			{
				"name": "unitone/cover-content",
				"attributes": {
					"position": "bottom"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Ut enim ad minim veniam, quis nostrud exercitation ullamco"
						}
					}
				]
			}
		]
	},
	"category": "unitone/layout",
	"editorScript": "file:./index.js"
}
