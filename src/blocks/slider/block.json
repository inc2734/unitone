{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"textdomain": "unitone",
	"name": "unitone/slider",
	"title": "Slider",
	"description": "This block displays children scrolling horizontally.",
	"attributes": {
		"arrows": {
			"type": "boolean",
			"default": false
		},
		"arrowsAlignment": {
			"type": "string",
			"default": "bottom"
		},
		"arrowsJustification": {
			"type": "string",
			"default": "center"
		},
		"hideOutside": {
			"type": "boolean",
			"default": false
		},
		"pagination": {
			"type": "boolean",
			"default": false
		},
		"paginationAlignment": {
			"type": "string",
			"default": "bottom"
		},
		"paginationJustification": {
			"type": "string",
			"default": "center"
		},
		"slideWidth": {
			"type": "string"
		}
	},
	"supports": {
		"className": false,
		"anchor": true,
		"unitone": {
			"gap": true
		}
	},
	"category": "unitone/component",
	"editorScript": "file:./index.js",
	"viewScript": "file:./app.js",
	"style": "file:./index.css",
	"editorStyle": "file:./editor.css"
}
