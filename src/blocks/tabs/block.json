{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"version": "25.7.0",
	"textdomain": "unitone",
	"name": "unitone/tabs",
	"title": "Tabs",
	"description": "This block displays tabs.",
	"attributes": {
		"tabBarJustification": {
			"type": "string",
			"default": ""
		},
		"tabPadding": {
			"type": [ "string", "object" ]
		},
		"tabPanelPadding": {
			"type": [ "string", "object" ]
		},
		"matchHeight": {
			"type": "boolean",
			"default": false
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ]
		},
		"anchor": {
			"type": "string",
			"default": ""
		}
	},
	"allowedBlocks": [ "unitone/tab-panel" ],
	"providesContext": {
		"unitone/tabPadding": "tabPadding",
		"unitone/tabPanelPadding": "tabPanelPadding"
	},
	"selectors": {
		"root": ".unitone-tabs"
	},
	"supports": {
		"className": false,
		"anchor": true,
		"interactivity": true,
		"__experimentalBorder": {
			"color": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"style": true,
				"width": true
			}
		},
		"unitone": {
			"gap": true
		}
	},
	"styles": [
		{
			"name": "default",
			"label": "Default",
			"isDefault": true
		},
		{
			"name": "simple",
			"label": "Simple"
		},
		{
			"name": "bar",
			"label": "Bar"
		},
		{
			"name": "badge",
			"label": "Badge"
		}
	],
	"example": {
		"innerBlocks": [
			{
				"name": "unitone/tab-panel",
				"attributes": {
					"tabLabel": "Tab 1"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Lorem Ipsum is simply dummy text of the printing and typesetting industry."
						}
					}
				]
			},
			{
				"name": "unitone/tab-panel",
				"attributes": {
					"tabLabel": "Tab 2"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
						}
					}
				]
			}
		]
	},
	"category": "unitone/component",
	"editorScript": "file:./index.js",
	"style": "file:./style-index.css",
	"editorStyle": "file:./index.css",
	"viewScriptModule": "file:./view.js"
}
