{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"version": "18.2.0",
	"textdomain": "unitone",
	"name": "unitone/with-sidebar-divided",
	"title": "With sidebar (Divided)",
	"description": "This block is used to assemble components with sidebars.",
	"attributes": {
		"sidebarWidth": {
			"type": "string",
			"default": "auto"
		},
		"contentMinWidth": {
			"type": "string",
			"default": "50%"
		},
		"revert": {
			"type": "boolean",
			"default": false
		},
		"sidebar": {
			"type": "string",
			"default": "right"
		},
		"unitone": {
			"type": "object",
			"default": {
				"alignItems": "stretch",
				"dividerType": "stripe",
				"divider": {
					"style": "solid",
					"width": "1px"
				},
				"dividerColor": "unitone-light-gray"
			}
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ]
		}
	},
	"selectors": {
		"root": "[data-unitone-layout~=with-sidebar][data-unitone-layout*=-divider:]"
	},
	"allowedBlocks": [ "unitone/with-sidebar-content" ],
	"supports": {
		"className": false,
		"anchor": true,
		"color": {
			"background": false,
			"link": true,
			"text": true
		},
		"typography": {
			"fontSize": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"unitone": {
			"gap": {
				"splitOnAxis": true
			},
			"alignItems": true,
			"dividerType": [ "stripe", "slash", "bordered" ],
			"divider": true,
			"fluidTypography": true,
			"halfLeading": true
		}
	},
	"example": {
		"innerBlocks": [
			{
				"name": "unitone/with-sidebar-content",
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Lorem ipsum dolor sit amet"
						}
					}
				]
			},
			{
				"name": "unitone/with-sidebar-content",
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "consectetur"
						}
					}
				]
			}
		]
	},
	"category": "unitone/layout",
	"editorScript": "file:./index.js",
	"style": [ "file:./style-index.css", "unitone-with-sidebar-style" ],
	"editorStyle": "file:./index.css"
}
