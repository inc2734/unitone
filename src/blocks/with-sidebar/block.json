{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"version": "19.7.0",
	"textdomain": "unitone",
	"name": "unitone/with-sidebar",
	"title": "With sidebar",
	"description": "This block is used to assemble components with sidebars.",
	"attributes": {
		"sidebarWidth": {
			"type": "string",
			"default": "auto"
		},
		"contentMinWidth": {
			"type": "string",
			"default": "50%"
		},
		"revert": {
			"type": "boolean",
			"default": false
		},
		"sidebar": {
			"type": "string",
			"default": "right"
		},
		"unitone": {
			"type": "object",
			"default": {
				"alignItems": "stretch"
			}
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ]
		}
	},
	"selectors": {
		"root": "[data-unitone-layout~=with-sidebar]"
	},
	"allowedBlocks": [ "unitone/with-sidebar-content" ],
	"supports": {
		"className": false,
		"anchor": true,
		"color": {
			"background": false,
			"link": true,
			"text": true
		},
		"typography": {
			"fontSize": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		},
		"unitone": {
			"gap": {
				"splitOnAxis": true
			},
			"alignItems": true,
			"overflow": true,
			"fluidTypography": true,
			"halfLeading": true
		}
	},
	"example": {
		"innerBlocks": [
			{
				"name": "unitone/with-sidebar-content",
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Lorem ipsum dolor sit amet"
						}
					}
				]
			},
			{
				"name": "unitone/with-sidebar-content",
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "consectetur"
						}
					}
				]
			}
		]
	},
	"category": "unitone/layout",
	"editorScript": "file:./index.js",
	"style": "file:./style-index.css"
}
