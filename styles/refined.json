{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Refined",
	"settings": {
		"color": {
			"gradients": [
				{
					"slug":"unitone-accent",
					"gradient":"linear-gradient(135deg, #c9dff2 0%, #4f5873 100%)",
					"name":"Accent gradation"
				}
			],
			"palette": [
				{
					"slug": "unitone-accent",
					"color": "#bf4e6d",
					"name": "Accent"
				},
				{
					"slug": "unitone-background",
					"color": "#e9f1f2",
					"name": "Background"
				},
				{
					"slug": "unitone-background-alt",
					"color": "var(--unitone--color--background-alt)",
					"name": "Background Alt"
				},
				{
					"slug": "unitone-text",
					"color": "var(--unitone--color--text)",
					"name": "Text"
				},
				{
					"slug": "unitone-text-alt",
					"color": "var(--unitone--color--text-alt)",
					"name": "Text Alt"
				},
				{
					"slug": "unitone-text-black",
					"color": "var(--unitone--color--text-immutable)",
					"name": "Text (Black / Immutable)"
				},
				{
					"slug": "unitone-pale-gray",
					"color": "rgba(4, 27, 62, .05)",
					"name": "Pale Gray"
				},
				{
					"slug": "unitone-bright-gray",
					"color": "rgba(4, 27, 62, .1)",
					"name": "Bright Gray"
				},
				{
					"slug": "unitone-light-gray",
					"color": "rgba(4, 27, 62, .2)",
					"name": "Light Gray"
				},
				{
					"slug": "unitone-gray",
					"color": "rgba(4, 27, 62, .4)",
					"name": "Gray"
				},
				{
					"slug": "unitone-dark-gray",
					"color": "rgba(4, 27, 62, .7)",
					"name": "Dark Gray"
				},
				{
					"slug": "unitone-heavy-gray",
					"color": "rgba(4, 27, 62, .95)",
					"name": "Heavy Gray"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--unitone-accent)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--unitone-accent)"
				}
			}
		}
	}
}
