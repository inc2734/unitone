		"spacing": {
			"blockGap": true,
			"customSpacingSize": false,
			"margin": false,
			"padding": false,
			"defaultSpacingSizes": false,
			"units": ["%", "px", "em", "rem", "vh", "vw", "vmin", "vmax"],
			"spacingSizes": [
				{
					"name": "XS",
					"slug": "20",
					"size": "var(--unitone--s-2)"
				},
				{
					"name": "S",
					"slug": "30",
					"size": "var(--unitone--s-1)"
				},
				{
					"name": "M",
					"slug": "40",
					"size": "var(--unitone--s1)"
				},
				{
					"name": "L",
					"slug": "50",
					"size": "var(--unitone--s2)"
				},
				{
					"name": "XL",
