		"dimensions": {
			"minHeight": true
		},
		"custom": {
			"container-max-width": "min(100%, var(--unitone--container-max-width))",
			"content-max-width": "min(100%, var(--unitone--measure))"
		},
		"layout": {
			"contentSize": "var(--wp--custom--content-max-width)",
			"wideSize": "var(--wp--custom--container-max-width)"
		},
		"shadow": {
			"presets": [
				{
					"name": "[unitone] Natural",
					"shadow": "0 5px 20px -5px rgba(0, 0, 0, .2)",
					"slug": "unitone-natural"
				}
			]
		},
		"typography": {
			"defaultFontSizes": false,
			"dropCap": true,
			"customFontSize": false,
			"textTransform": true,
			"lineHeight": false,
			"writingMode": true,
			"fontFamilies": [
