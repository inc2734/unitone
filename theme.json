	"styles": {
		"color": {
			"background": "var(--wp--preset--color--unitone-background)",
			"text": "var(--wp--preset--color--unitone-text)"
		},
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--unitone-accent)"
				},
				"border": {
					"radius": "var(--unitone--border-radius)"
				},
				"spacing": {
					"padding": {
						"top": "calc(var(--unitone--padding) / 1.5)",
						"right": "var(--unitone--padding)",
						"bottom": "calc(var(--unitone--padding) / 1.5)",
						"left": "var(--unitone--padding)"
					}
				}
			},
			"link": {
				"color": {
					"text": "#003c78"
				}
			},
			"caption": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--unitone-xs)"
				},
				"spacing": {
					"margin": {
						"top": "var(--unitone--s-1)",
						"right": "0",
						"bottom": "0",
						"left": "0"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"spacing": {
					"padding": {
						"top": "calc(var(--unitone--padding) / 1.5)",
						"right": "var(--unitone--padding)",
						"bottom": "calc(var(--unitone--padding) / 1.5)",
						"left": "var(--unitone--padding)"
					}
				},
				"variations": {
					"outline": {
						"border": {
							"width": "1px"
						},
						"spacing": {
							"padding": {
								"top": "calc(var(--unitone--padding) / 1.5)",
								"right": "var(--unitone--padding)",
								"bottom": "calc(var(--unitone--padding) / 1.5)",
								"left": "var(--unitone--padding)"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--unitone-text)",
					"text": "var(--wp--preset--color--unitone-text-alt)"
				}
			},
			"core/comment-author-name": {
				"elements": {
					"link": {
						"color": {
							"text": "inherit"
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontWeight": "bold"
				}
			},
			"core/comment-date": {
				"elements": {
					"link": {
						"color": {
							"text": "inherit"
						}
					}
				}
			},
			"core/comment-edit-link": {
				"elements": {
					"link": {
						"color": {
							"text": "inherit"
						}
					}
				}
			},
			"core/gallery": {
				"elements": {
					"caption": {
						"spacing": {
							"margin": {
								"top": "calc(-1 * var(--wp--style--unstable-gallery-gap) + var(--unitone--s-1))"
							}
						}
					}
				}
			},
			"core/image": {
				"variations": {
					"sme-shadowed": {
						"shadow": "var:preset|shadow|unitone-natural"
					}
				}
			},
			"core/navigation": {
				"spacing": {
					"blockGap": "0px"
				}
			},
			"core/social-links": {
				"typography": {
					"fontSize": "inherit"
				}
			},
			"core/post-terms": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--unitone-accent)"
						}
					}
				},
				"variations": {
					"badge": {},
					"outline": {}
				}
			},
			"core/pullquote": {
				"typography": {
					"fontSize": "inherit",
					"lineHeight": "inherit"
				}
			},
			"core/separator": {
				"border": {
					"color": "currentColor",
					"top": {
						"width": "1px"
					},
					"right": {
						"width": "0"
					},
					"bottom": {
						"width": "0"
					},
					"left": {
						"width": "0"
					}
				}
			},
			"core/table": {
				"border": {
					"width": "0px",
					"style": "solid",
					"color": "var(--wp--preset--color--unitone-light-gray)"
				},
				"variations": {
					"stripes": {
					},
					"underline": {
					}
				}
			}
		},
		"spacing": {
			"blockGap": "var(--unitone--margin-block, var(--unitone--global--text-gap))"
		}
	},
